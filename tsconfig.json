{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"jsx": "react-jsx",
	},
	"exclude": [
		"node_modules",
		"**/*.stories.tsx",		
		"./packages/**/lib"		
	], 
	"typeRoots": ["./node_modules/@types"]
}
 